<div class="reg-class">
  <div class="nav">   
    <div class="wrapper">
      <a href="/" class="back"><%= image_tag("left.png") %></a>
      <% if user_signed_in? %>
        <div class="name"><%= current_user.name %></div>
      <% end %>
      <h5><%= 'REGISTER' %></h5>
      <h6 id="dsa">Next</h6>
      
      <% if user_signed_in? %>
        <div class="btn">
          <%= button_to "LOG OUT", destroy_user_session_path, method: :delete, data: { turbo: false } %>
        </div>
      <% end %>    
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div id="avatar" class="field">    
      <label for="user_imagefile"><%= image_tag('account')%><span>Upload picture</span></label>
      <%= f.file_field :imagefile,  placeholder: 'Upload picture' %>
    </div>

    <div class="field">
      <%= f.text_field :name, autofocus: true, placeholder: 'Full name' %>
    </div>

    <div class="field">
      <%= f.email_field :email, placeholder: 'Email', autocomplete: "email" %>
    </div>

    <div class="field">   
      <%= f.password_field :password, placeholder: 'Password', autocomplete: "new-password" %>
    </div>

    <div class="actions" id="signupnone">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>
