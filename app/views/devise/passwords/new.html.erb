<%# <h2>Forgot your password?</h2> %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": "false", method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="actions resend">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
