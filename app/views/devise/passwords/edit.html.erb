<%# <h2>Change your password</h2> %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field"> 
    <%= f.password_field :password, autofocus: true, required: true, autocomplete: "new-password", placeholder: "New password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, placeholder: "Confirm new password" %>
  </div>

  <div class="actions resend">
    <%= f.submit "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
